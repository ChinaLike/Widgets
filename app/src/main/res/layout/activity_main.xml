<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.core.widget.toolbar.SimpleToolbar
        android:id="@+id/simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FF00"
        app:layout_constraintTop_toTopOf="parent"
        app:lk_show_left_layout="true"
        app:lk_show_right_layout="true"
        app:lk_toolbar_menu_icon="@drawable/lk_icon_toolbar_search"
        app:lk_toolbar_menu_text="测试" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/simple" />


</androidx.constraintlayout.widget.ConstraintLayout>